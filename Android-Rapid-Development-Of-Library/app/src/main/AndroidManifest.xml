<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lidong.demo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lidong.demo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lidong.demo.mvp.WeatherActivity"
            android:label="@string/title_activity_weather"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.lidong.demo.view.CircleProgressViewActivity"
            android:label="@string/title_activity_circle_progress_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.lidong.demo.view.TestWebViewFragmentActivity"
            android:label="@string/title_activity_test_web_view_fragment"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
